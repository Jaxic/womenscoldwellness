---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

const pageTitle = "Affiliate Disclosure | Women's Cold Plunge Benefits";
const pageDescription = "Transparency about our affiliate relationships and how we earn commissions from product recommendations.";

// Generate canonical URL and Open Graph image
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://womenscoldplunge.com');
const ogImage = '/images/og-default.webp';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={pageDescription}>
  <meta name="robots" content="noindex, nofollow">
  <title>{pageTitle}</title>
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph Tags -->
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:image" content={new URL(ogImage, canonicalURL)} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="Women's Cold Plunge Benefits" />
  <meta property="og:locale" content="en_US" />
  
  <!-- Twitter Card Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  <meta name="twitter:image" content={new URL(ogImage, canonicalURL)} />
  
  <!-- Google Analytics 4 -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-LYL708DKYY"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-LYL708DKYY');
  </script>
  <!-- Schema.org JSON-LD for SEO -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Affiliate Disclosure",
      "description": "Transparency about our affiliate relationships and how we earn commissions from product recommendations.",
      "url": "https://womenscoldplunge.com/disclosure"
    }
  </script>
</head>
<body class="font-sans text-gray-800 bg-white">
  <!-- Sticky Navigation -->
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-md">
    <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold font-display text-blue-600 hover:text-blue-700 transition-colors">Women's Cold Plunge</a>
      <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none" aria-label="Toggle navigation">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
        </svg>
      </button>
      <ul id="nav-menu" class="hidden md:flex space-x-6 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </nav>
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
      <ul class="flex flex-col items-center py-4 space-y-4 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="font-display font-bold text-3xl md:text-5xl text-gray-800 mb-6">
        Affiliate Disclosure
      </h1>
    </div>

    <!-- Content Section -->
    <article class="prose prose-lg max-w-none">
      <section class="mb-8">
        <p class="text-lg text-gray-600 leading-relaxed mb-6">
          <strong>Effective Date:</strong> January 1, 2025
        </p>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          At Women's Cold Plunge Benefits, we believe in complete transparency with our community. This disclosure explains our affiliate relationships and how we may earn commissions from some of the products we recommend.
        </p>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          What Are Affiliate Relationships?
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-4">
          Affiliate relationships are partnerships between our website and companies that sell cold plunge equipment and related wellness products. When you click on certain links on our site and make a purchase, we may receive a small commission from the seller at no additional cost to you.
        </p>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          These commissions help support our website operations, content creation, and our mission to provide valuable information to women interested in cold plunging.
        </p>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          Our Current Affiliate Partners
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-4">
          We currently have or may establish affiliate relationships with the following types of companies:
        </p>
        <ul class="list-disc list-inside space-y-2 text-gray-600 mb-6">
          <li><strong>Cold Plunge Equipment Manufacturers:</strong> Companies like Plunge, Therafrost, and other tub manufacturers</li>
          <li><strong>Wellness Product Companies:</strong> Providers of complementary wellness products and accessories</li>
          <li><strong>Educational Resources:</strong> Books, courses, and training programs related to cold therapy</li>
          <li><strong>Health and Fitness Brands:</strong> Companies offering products that complement cold plunging practices</li>
        </ul>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          This list may change over time as we identify new products and services that provide genuine value to our community.
        </p>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          How We Choose What to Recommend
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-4">
          Our recommendations are always based on our assessment of value and relevance to women's cold plunging needs. We only recommend products and services that we believe can genuinely benefit our audience. Our evaluation criteria include:
        </p>
        <ul class="list-disc list-inside space-y-2 text-gray-600 mb-6">
          <li>Quality and safety of the product</li>
          <li>Specific benefits for women's wellness needs</li>
          <li>Value for money and accessibility</li>
          <li>Company reputation and customer service</li>
          <li>Alignment with our evidence-based approach</li>
        </ul>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          <strong>Important:</strong> The existence of an affiliate relationship does not influence our editorial content or recommendations. We maintain editorial independence and will always prioritize our readers' best interests over potential commissions.
        </p>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          How Affiliate Links Work
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-4">
          When we include affiliate links in our content, they may be identified in several ways:
        </p>
        <ul class="list-disc list-inside space-y-2 text-gray-600 mb-6">
          <li>Clear labeling near or on the link itself</li>
          <li>Disclosure statements within the article or page</li>
          <li>General disclosure on pages containing affiliate links</li>
        </ul>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          When you click an affiliate link and make a purchase within a certain timeframe (usually 24-60 days, depending on the program), we may earn a commission. This commission comes from the seller's marketing budget and does not increase the price you pay.
        </p>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          What This Means for You
        </h2>
        <div class="bg-blue-50 p-6 rounded-lg mb-6">
          <h3 class="font-display font-semibold text-xl text-blue-800 mb-3">Your Rights and Our Commitments:</h3>
          <ul class="space-y-2 text-blue-700">
            <li>• You are never required to purchase anything through our affiliate links</li>
            <li>• You can always search for products independently and purchase directly</li>
            <li>• Our recommendations remain honest and based on merit, not commission potential</li>
            <li>• We will always disclose when content contains affiliate links</li>
            <li>• Our educational content remains free and accessible regardless of purchases</li>
          </ul>
        </div>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          Types of Content That May Include Affiliate Links
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-4">
          We may include affiliate links in various types of content, including:
        </p>
        <ul class="list-disc list-inside space-y-2 text-gray-600 mb-6">
          <li><strong>Product Reviews:</strong> Detailed reviews of cold plunge tubs and equipment</li>
          <li><strong>Comparison Guides:</strong> Side-by-side comparisons of different products</li>
          <li><strong>Resource Lists:</strong> Curated lists of helpful products and tools</li>
          <li><strong>Educational Articles:</strong> When mentioning specific products that support the content</li>
          <li><strong>Email Newsletters:</strong> Product recommendations sent to subscribers</li>
        </ul>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          Our Commitment to Transparency
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-4">
          We are committed to maintaining your trust through complete transparency:
        </p>
        <ul class="list-disc list-inside space-y-2 text-gray-600 mb-6">
          <li>We will always disclose affiliate relationships clearly and prominently</li>
          <li>We will never hide or disguise affiliate links</li>
          <li>We will continue to provide valuable, educational content regardless of affiliate potential</li>
          <li>We will regularly review our affiliate partnerships to ensure they align with our values</li>
          <li>We will respond honestly to questions about our affiliate relationships</li>
        </ul>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          FTC Compliance
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          This disclosure complies with the Federal Trade Commission's (FTC) guidelines regarding affiliate marketing and endorsements. The FTC requires that consumers be informed about potential financial relationships that could influence product recommendations.
        </p>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          In accordance with FTC guidelines, we disclose that we have a financial relationship with some of the companies whose products we review or recommend, and we may be compensated if you purchase products through our affiliate links.
        </p>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          Questions About Our Affiliate Relationships
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-4">
          If you have any questions about our affiliate relationships, this disclosure, or how we choose products to recommend, please don't hesitate to contact us. We believe in open communication with our community and are happy to provide additional information.
        </p>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          We may update this disclosure from time to time as our affiliate relationships change or as we refine our policies. Any significant changes will be communicated to our community.
        </p>
      </section>

      <section class="mb-8">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-6">
          Thank You for Your Support
        </h2>
        <p class="text-base text-gray-600 leading-relaxed mb-6">
          When you choose to purchase products through our affiliate links, you're directly supporting our mission to provide high-quality, evidence-based information about cold plunging for women. Your support allows us to continue creating valuable content, conducting research, and building resources that benefit the entire community.
        </p>
        <p class="text-base text-gray-600 leading-relaxed">
          Thank you for being part of our community and for trusting us to provide honest, helpful guidance on your cold plunging journey.
        </p>
      </section>
    </article>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-12">
    <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <a href="/disclosure" class="hover:text-blue-400 transition-colors text-blue-400">Affiliate Disclosure</a> | 
        <a href="/privacy" class="hover:text-blue-400 transition-colors">Privacy Policy</a>
      </div>
      <div class="flex space-x-4 mb-4 md:mb-0">
        <a href="https://instagram.com" class="hover:text-blue-400 transition-colors" aria-label="Follow on Instagram">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.982-6.98.059-1.281.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.948-.2-4.354-2.618-6.782-6.98-6.982-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.40z"/>
          </svg>
        </a>
        <a href="https://pinterest.com" class="hover:text-blue-400 transition-colors" aria-label="Follow on Pinterest">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12.14.5C5.86.5 1.7 5.29 1.7 11.57c0 4.45 2.72 8.24 6.58 9.76-.09-.81-.17-2.06.03-2.94.18-.79 1.18-5.03 1.18-5.03s-.3-.6-.3-1.49c0-1.39.81-2.43 1.81-2.43.85 0 1.26.64 1.26 1.41 0 .86-.55 2.14-.83 3.33-.24.99.49 1.8 1.46 1.8 1.75 0 3.1-1.84 3.1-4.49 0-2.35-1.69-3.99-4.1-3.99-2.79 0-4.43 2.09-4.43 4.25 0 .84.32 1.74.73 2.23.08.1.09.18.07.28-.07.34-.23 1.06-.27 1.2-.04.15-.14.18-.32.11-1.2-.44-1.95-1.83-1.95-2.95 0-2.4 1.74-4.6 5.02-4.6 2.64 0 4.69 1.88 4.69 4.39 0 2.62-1.65 4.73-3.94 4.73-.77 0-1.49-.4-1.74-.87 0 0-.38 1.46-.47 1.82-.17.67-.5 1.51-.75 2.02.56.17 1.14.26 1.75.26 6.28 0 11.36-5.29 11.36-11.57S18.42.5 12.14.5z"/>
          </svg>
        </a>
      </div>
      <p class="text-sm">© 2025 Women's Cold Plunge Benefits</p>
    </div>
  </footer>

  <script>
    // Hamburger menu toggle
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
  <Analytics />
</body>
</html>

