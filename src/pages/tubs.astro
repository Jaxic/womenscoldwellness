---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

// Updated page title and description for the "Coming Soon" status
const pageTitle = "Tubs Coming Soon | Cold Plunge Benefits for Women";
const pageDescription = "Our curated list of the best cold plunge tubs is coming soon. Stay tuned for our top recommendations for women's wellness.";

// Generate canonical URL and Open Graph image
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://www.womenscoldwellness.com');
const ogImage = '/images/og-tubs.webp';

// The 'tubs' constant has been removed as it's no longer needed.
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  canonicalURL={canonicalURL.toString()}
  ogImage={ogImage}
  ogType="website"
>
  <Fragment slot="head">
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "Tubs Coming Soon",
        "description": "Our selection of cold plunge tubs will be available soon.",
        "url": "https://www.womenscoldwellness.com/tubs"
      }
    </script>
    <style>
      @import url('/fonts/fonts.css');
      .font-display { font-family: 'Montserrat', sans-serif; }
      .font-body { font-family: 'Open Sans', sans-serif; }
    </style>
  </Fragment>
<body class="font-sans text-gray-800 bg-white">
  <!-- Sticky Navigation (Unchanged) -->
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-md">
    <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold font-display text-blue-600 hover:text-blue-700 transition-colors">Cold Plunge Benefits for Women</a>
      <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none" aria-label="Toggle navigation">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
        </svg>
      </button>
      <ul id="nav-menu" class="hidden md:flex space-x-6 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors text-blue-600">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </nav>
    <!-- Mobile Menu (Unchanged) -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
      <ul class="flex flex-col items-center py-4 space-y-4 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors text-blue-600">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </div>
  </header>

  <!-- Main Content - REPLACED -->
  <main class="container mx-auto px-4 py-12 flex items-center justify-center" style="min-height: calc(100vh - 250px);">
    <!-- Centered "Coming Soon" Message -->
    <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-gray-800 font-display">
            Coming Soon
        </h1>
    </div>
  </main>


  <!-- Footer (Unchanged) -->
  <footer class="bg-gray-800 text-white py-12">
    <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <a href="/disclosure" class="hover:text-blue-400 transition-colors">Affiliate Disclosure</a> | 
        <a href="/privacy" class="hover:text-blue-400 transition-colors">Privacy Policy</a>
      </div>
      <div class="flex space-x-4 mb-4 md:mb-0">
        <a href="https://instagram.com" class="hover:text-blue-400 transition-colors" aria-label="Follow on Instagram">
