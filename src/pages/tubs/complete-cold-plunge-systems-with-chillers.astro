      const applyContainIfNeeded = () => {
        const w = el.naturalWidth;
        const h = el.naturalHeight;
        if (!w || !h) return;
        const ratio = w / h;
        // If image is very tall (portrait) or very wide (panorama), avoid hard cropping
        if (ratio < 0.9 || ratio > 1.6) {
          el.classList.add('contain');
        }
      };
      if (el.complete) {
        applyContainIfNeeded();
      } else {
        el.addEventListener('load', applyContainIfNeeded);
      }
    });

