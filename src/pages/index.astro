    // Animation on page load
    document.addEventListener('DOMContentLoaded', function() {
      // Handle video loading and poster image transition
      const heroVideo = document.querySelector('.hero-video') as HTMLVideoElement;
      const heroPoster = document.querySelector('.hero-poster') as HTMLElement;
      
      if (heroVideo && heroPoster) {
        // Initially hide video and show poster
        heroVideo.style.opacity = '0';
        heroPoster.style.opacity = '1';
        
        // When video can play, fade in video and fade out poster
        heroVideo.addEventListener('canplay', () => {
          heroVideo.style.opacity = '1';
          heroPoster.style.opacity = '0';
        });
        
        // If video fails to load, keep showing poster
        heroVideo.addEventListener('error', () => {
          heroPoster.style.opacity = '1';
          heroVideo.style.display = 'none';
        });
      }
      // Wait for layout to complete, then analyze word positions
      setTimeout(() => {
        const headlineWords = document.querySelectorAll('.headline-word');
        
        // Get position data for each word
        const wordPositions = Array.from(headlineWords).map((word, index) => ({
          element: word,
          originalIndex: index,
          rect: word.getBoundingClientRect(),
          text: word.textContent.trim()
        }));
        
        // Sort words by visual position (top to bottom, then left to right)
        wordPositions.sort((a, b) => {
          const topDiff = Math.abs(a.rect.top - b.rect.top);
          if (topDiff > 5) { // Different lines (5px tolerance)
            return a.rect.top - b.rect.top;
          } else { // Same line, sort by left position
            return a.rect.left - b.rect.left;
          }
        });
        
        // Animate words in their visual order
        wordPositions.forEach((wordData, visualIndex) => {
          setTimeout(() => {
            (wordData.element as HTMLElement).style.animation = 'slideInUp 0.8s ease-out forwards';
          }, 800 + (visualIndex * 200));
        });
        
      }, 100); // Small delay to ensure layout is complete

      // Animate subheadline
      setTimeout(() => {
        const subheadline = document.querySelector('.hero-subheadline') as HTMLElement;
        if (subheadline) {
          subheadline.classList.add('animate');
          subheadline.style.animation = 'slideInUp 1s ease-out forwards';
        }
      }, 2200);

      // Animate CTA buttons
      setTimeout(() => {
        const ctaButtons = document.getElementById('cta-buttons') as HTMLElement;
        if (ctaButtons) {
          ctaButtons.style.animation = 'bounceIn 0.8s ease-out forwards';
        }
      }, 2800);

      // Intersection Observer for benefit cards
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -20px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const cards = document.querySelectorAll('.benefit-card');
            cards.forEach((card, cardIndex) => {
              setTimeout(() => {
                (card as HTMLElement).style.opacity = '1';
                (card as HTMLElement).style.animation = 'slideInUp 0.8s ease-out forwards';
              }, cardIndex * 200);
            });
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      // Observe each benefit card individually
      const benefitCards = document.querySelectorAll('.benefit-card');
      benefitCards.forEach(card => {
        observer.observe(card);
      });

      // Scroll-triggered animations for static sections
      const scrollObserverOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const scrollObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const element = entry.target;
            
            // Add the appropriate animation class based on existing classes
            if (element.classList.contains('fade-in-up')) {
              element.classList.add('fade-in-up');
            } else if (element.classList.contains('fade-in-left')) {
              element.classList.add('fade-in-left');
            } else if (element.classList.contains('fade-in-right')) {
              element.classList.add('fade-in-right');
            } else if (element.classList.contains('scale-in')) {
              element.classList.add('scale-in');
            } else if (element.classList.contains('stagger-fade-in')) {
              element.classList.add('stagger-fade-in');
            }
            
            // Unobserve after animation triggers
            scrollObserver.unobserve(element);
          }
        });
      }, scrollObserverOptions);

      // Observe all elements with animate-on-scroll class
      const animateElements = document.querySelectorAll('.animate-on-scroll');
      animateElements.forEach(element => {
        scrollObserver.observe(element);
      });

      // Research stats animation with better reliability
      const researchStatsObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const stats = entry.target.querySelectorAll('.research-stat');
            stats.forEach((stat, index) => {
              setTimeout(() => {
                stat.classList.add('visible');
              }, index * 150);
            });
            researchStatsObserver.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.2,
        rootMargin: '0px 0px -50px 0px'
      });

      // Target the specific stats container
      const scienceSection = document.querySelector('.science-section');
      if (scienceSection) {
        researchStatsObserver.observe(scienceSection);
      }

      // FAQ Accordion functionality
      const faqQuestions = document.querySelectorAll('.faq-question');
      faqQuestions.forEach(question => {
        question.addEventListener('click', () => {
          const faqItem = question.closest('.faq-item');
          const answer = faqItem?.querySelector('.faq-answer') as HTMLElement;
          const icon = question.querySelector('.faq-icon') as HTMLElement;
          
          if (faqItem && answer && icon) {
            // Toggle the accordion
            if (answer.style.maxHeight === '0px' || answer.style.maxHeight === '') {
              // Open accordion
              answer.style.maxHeight = answer.scrollHeight + 'px';
              icon.style.transform = 'rotate(180deg)';
              faqItem.classList.add('active');
            } else {
              // Close accordion
              answer.style.maxHeight = '0px';
              icon.style.transform = 'rotate(0deg)';
              faqItem.classList.remove('active');
            }
          }
        });
      });

    });
