    <script>
        class AnimationManager {
            constructor() {
                this.reducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                this.isMobile = window.innerWidth < 768;
                this.lastScrollY = window.scrollY;
                this.setupIntersectionObserver();
                this.setupScrollListeners();
                this.setupMobileMenu();
                this.handleVideoPlayback();
            }

            animate(element, animationClass, delay = 0) {
                if (this.reducedMotion) return;
                setTimeout(() => {
                    element.classList.add(animationClass);
                }, delay);
            }

            setupIntersectionObserver() {
                if (this.reducedMotion) return;

                const observer = new IntersectionObserver((entries) => {
                    entries.forEach((entry, index) => {
                        if (entry.isIntersecting) {
                            setTimeout(() => {
                                entry.target.classList.add('animate-slide-up');
                            }, index * 200); // Stagger delay
                        }
                    });
                }, { threshold: 0.5 });

                // Observe benefit cards
                document.querySelectorAll('.benefit-card').forEach(card => {
                    observer.observe(card);
                });
            }

            setupScrollListeners() {
                let ticking = false;
                const nav = document.getElementById('main-nav');

                const handleScroll = () => {
                    const currentScrollY = window.scrollY;

                    // Hide/show navigation based on scroll direction
                    if (currentScrollY > this.lastScrollY && currentScrollY > 100) {
                        nav.classList.remove('nav-visible');
                        nav.classList.add('nav-hidden');
                    } else {
                        nav.classList.remove('nav-hidden');
                        nav.classList.add('nav-visible');
                    }

                    this.lastScrollY = currentScrollY;
                    ticking = false;
                };

                window.addEventListener('scroll', () => {
                    if (!ticking) {
                        requestAnimationFrame(handleScroll);
                        ticking = true;
                    }
                });
            }

            setupMobileMenu() {
                const menuToggle = document.getElementById('menu-toggle');
                const mobileMenu = document.getElementById('mobile-menu');

                if (menuToggle && mobileMenu) {
                    menuToggle.addEventListener('click', () => {
                        const isHidden = mobileMenu.classList.contains('hidden');

                        if (isHidden) {
                            mobileMenu.classList.remove('hidden');
                            mobileMenu.classList.add('mobile-menu-enter');
                            menuToggle.classList.add('active');
                            menuToggle.textContent = '✕';
                        } else {
                            mobileMenu.classList.add('hidden');
                            mobileMenu.classList.remove('mobile-menu-enter');
                            menuToggle.classList.remove('active');
                            menuToggle.textContent = '☰';
                        }
                    });
                }
            }

            handleVideoPlayback() {
                const video = document.querySelector('.hero-video');
                if (video && this.isMobile) {
                    // Optionally pause video on mobile for performance
                    // video.pause();
                }
            }
        }

        // Initialize animation manager when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new AnimationManager();
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            // Re-check mobile status
            const isMobile = window.innerWidth < 768;
            if (isMobile !== this.isMobile) {
                location.reload(); // Simple way to handle responsive changes
            }
        });
    </script>

