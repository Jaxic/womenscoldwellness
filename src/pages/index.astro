---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Cold Plunge Benefits for Women | Wellness for Women";
const pageDescription = "Discover how cold plunging boosts women's hormonal balance, stress relief, and recovery with our expert guides and top tub recommendations.";

// Generate canonical URL and Open Graph image
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://www.womenscoldwellness.com');
const ogImage = '/images/social-share.jpg';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  canonicalURL={canonicalURL.toString()}
  ogImage={ogImage}
  ogType="website"
>
  <Fragment slot="head">
    <!-- Schema.org JSON-LD for SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "Cold Plunge Benefits for Women",
        "description": "Discover how cold plunging boosts women's hormonal balance, stress relief, and recovery with our expert guides and top tub recommendations.",
        "url": "https://www.womenscoldwellness.com/"
      }
    </script>
    
    <!-- Page-specific styles -->
    <style>
      @import url('/fonts/fonts.css');
      
      .font-display {
        font-family: 'Montserrat', sans-serif;
      }
      
      .font-body {
        font-family: 'Open Sans', sans-serif;
      }
      
      .hero-video[poster] {
        object-position: center center;
        background-image: url('/Poster-Image.webp');
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
      }
      
      @media (max-width: 768px) {
        .hero-video[poster] {
          object-position: center center;
          background-image: url('/Poster-Image.webp');
          background-size: cover;
          background-position: center center;
          background-repeat: no-repeat;
        }
      }
      
      .hero-subheadline {
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
      }
    </style>
  </Fragment>

<body class="font-sans text-gray-800 bg-white">
  <!-- Sticky Navigation -->
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-md">
    <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold font-display text-blue-600 hover:text-blue-700 transition-colors">Cold Plunge Benefits for Women</a>
      <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none" aria-label="Toggle navigation">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
        </svg>
      </button>
      <ul id="nav-menu" class="hidden md:flex space-x-6 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </nav>
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
      <ul class="flex flex-col items-center py-4 space-y-4 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </div>
  </header>

  <!-- Hero Section with Video Background -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
      <!-- Poster image that shows immediately -->
      <div class="hero-poster w-full h-full bg-cover bg-center bg-no-repeat" style="background-image: url('/Poster-Image.webp');"></div>
      
      <video 
        class="hero-video w-full h-full object-cover"
        autoplay 
        muted 
        loop 
        playsinline
        poster="/Poster-Image.webp"
        preload="metadata"
        onloadstart="this.style.opacity='0'"
        oncanplay="this.style.opacity='1'"
        onerror="this.style.display='none'">
        <source src="/Full.webm" type="video/webm">
        <!-- Fallback gradient if video doesn't load -->
        <div class="w-full h-full bg-gradient-to-br from-blue-400 to-blue-600"></div>
      </video>
      <!-- Dark overlay for text readability -->
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 container mx-auto px-4 text-center text-white hero-content">
      <h1 class="hero-headline font-display font-bold text-4xl md:text-6xl lg:text-7xl max-w-4xl mx-auto leading-tight">
        <span class="headline-word opacity-0">Unlock</span>
        <span class="headline-word highlight-text opacity-0"> Women's</span>
        <span class="headline-word highlight-text opacity-0"> Wellness</span><br class="hidden sm:block">
        <span class="headline-word opacity-0">with</span>
        <span class="headline-word opacity-0"> Cold</span>
        <span class="headline-word opacity-0"> Plunging</span>
      </h1>
      <p class="hero-subheadline mt-6 text-lg md:text-xl lg:text-2xl max-w-2xl mx-auto font-body leading-relaxed opacity-0">
        Empower your hormones, conquer stress, and accelerate recovery through cold plunging—crafted especially for women.
      </p>
      <div class="mt-16 flex flex-col sm:flex-row gap-4 justify-center opacity-0" id="cta-buttons">
        <a
          href="/benefits"
          class="cta-button-primary inline-block bg-gold-500 text-gray-900 font-bold font-body py-4 px-8 rounded-xl text-lg hover:bg-gold-600 transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
          aria-label="Discover cold plunge benefits"
        >
          Discover Benefits
        </a>
        <a
          href="/tubs"
          class="cta-button-secondary inline-block bg-transparent border-2 border-gold-500 text-gold-500 font-bold font-body py-4 px-8 rounded-xl text-lg hover:bg-gold-500 hover:text-gray-900 transition-all duration-300"
          aria-label="Shop top cold plunge tubs"
        >
          Shop Top Tubs
        </a>
      </div>
    </div>
  </section>

  <!-- Benefits Teaser Section -->
  <section class="benefits bg-blue-100 py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-display font-bold text-3xl md:text-4xl text-gray-800 mb-4">Why Cold Plunging Works for Women</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover the science-backed benefits specifically designed for women's unique physiological needs.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Card 1: Hormonal Balance -->
        <div class="benefit-card bg-white shadow-lg rounded-xl p-8 text-center hover:shadow-xl hover:-translate-y-2 transition-all duration-300 opacity-0">
          <!-- Clean SVG icon for hormones -->
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl text-gray-800 mb-4">Balance Hormones</h3>
          <p class="text-base font-body text-gray-600 mb-6 leading-relaxed">
            Support hormonal health through cold therapy, helping regulate menstrual cycles and ease menopause symptoms.
          </p>
          <a
            href="/pillars/ice-bath-women-hormones"
            class="inline-block text-blue-600 hover:text-blue-800 font-body font-semibold transition-colors"
            aria-label="Learn about hormonal balance benefits"
          >
            Learn More →
          </a>
        </div>
        
        <!-- Card 2: Reduce Stress -->
        <div class="benefit-card bg-white shadow-lg rounded-xl p-8 text-center hover:shadow-xl hover:-translate-y-2 transition-all duration-300 opacity-0">
          <!-- Clean SVG icon for stress relief -->
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl text-gray-800 mb-4">Reduce Stress</h3>
          <p class="text-base font-body text-gray-600 mb-6 leading-relaxed">
            Ease stress and boost mood through natural endorphin release and improved stress response.
          </p>
          <a
            href="/pillars/cold-plunge-stress-recovery-women"
            class="inline-block text-blue-600 hover:text-blue-800 font-body font-semibold transition-colors"
            aria-label="Learn about stress relief benefits"
          >
            Learn More →
          </a>
        </div>
        
        <!-- Card 3: Boost Recovery -->
        <div class="benefit-card bg-white shadow-lg rounded-xl p-8 text-center hover:shadow-xl hover:-translate-y-2 transition-all duration-300 opacity-0">
          <!-- Clean SVG icon for recovery -->
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl text-gray-800 mb-4">Boost Recovery</h3>
          <p class="text-base font-body text-gray-600 mb-6 leading-relaxed">
            Speed up recovery after workouts and daily activities while improving sleep quality and energy levels.
          </p>
          <a
            href="/pillars/cold-plunge-stress-recovery-women"
            class="inline-block text-blue-600 hover:text-blue-800 font-body font-semibold transition-colors"
            aria-label="Learn about recovery benefits"
          >
            Learn More →
          </a>
        </div>
      </div>
    </div>
  </section>

<!-- Scientific Evidence Section -->
  <section class="science-section bg-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="font-display font-bold text-3xl md:text-4xl text-gray-800 mb-4">The Science Behind Women's Cold Therapy</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">Understanding how cold exposure creates measurable improvements in women's mental clarity, stress response, and metabolic health.</p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="space-y-8">
              <div class="research-stat bg-blue-50 p-6 rounded-lg border-l-4 border-blue-500">
                <h3 class="font-display font-bold text-xl text-blue-800 mb-2">Sharper Focus & Elevated Mood</h3>
                <p class="text-blue-700 mb-3">Experience improved mental clarity, sustained attention, and natural mood elevation throughout your day. Cold exposure triggers your body's production of norepinephrine, a neurotransmitter that enhances alertness and emotional resilience.</p>
                <p class="text-sm text-blue-600 mb-2"><strong>The Science:</strong> Studies show cold exposure can increase norepinephrine levels by up to 230%, leading to measurable improvements in focus and stress management.</p>
                <span class="text-xs text-blue-500 italic">European Journal of Applied Physiology</span>
              </div>
              
              <div class="research-stat bg-green-50 p-6 rounded-lg border-l-4 border-green-500">
                <h3 class="font-display font-bold text-xl text-green-800 mb-2">Lower Stress & Better Balance</h3>
                <p class="text-green-700 mb-3">Feel more calm and centered as your body learns to regulate stress more effectively. Regular cold therapy helps reduce chronic stress hormones, particularly beneficial for women managing busy schedules and multiple responsibilities.</p>
                <p class="text-sm text-green-600 mb-2"><strong>The Science:</strong> Consistent cold exposure practice can reduce cortisol levels by up to 47%, helping regulate your stress response system over time.</p>
                <span class="text-xs text-green-500 italic">Psychoneuroendocrinology Research</span>
              </div>
              
              <div class="research-stat bg-purple-50 p-6 rounded-lg border-l-4 border-purple-500">
                <h3 class="font-display font-bold text-xl text-purple-800 mb-2">Enhanced Metabolism & Energy</h3>
                <p class="text-purple-700 mb-3">Notice increased energy levels and improved metabolic function as your body adapts to cold exposure. Cold therapy activates brown adipose tissue, which burns calories to generate heat and supports healthy weight management.</p>
                <p class="text-sm text-purple-600 mb-2"><strong>The Science:</strong> Cold exposure can boost metabolic rate by approximately 15% through brown fat activation, supporting your body's natural energy systems.</p>
                <span class="text-xs text-purple-500 italic">Journal of Clinical Investigation</span>
              </div>
            </div>
          </div>
          
          <div class="text-center lg:text-left">
            <div class="bg-gradient-to-br from-blue-100 to-teal-100 p-8 rounded-2xl">
              <h3 class="font-display font-bold text-2xl text-gray-800 mb-4">Why Women Respond Differently</h3>
              <p class="text-gray-600 mb-4 leading-relaxed">
                Women's unique hormonal patterns, body composition, and stress response systems mean cold therapy affects us differently than men. Our approach is specifically designed around these differences.
              </p>
              <ul class="text-left space-y-3 text-gray-700">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Hormonal cycle considerations for timing</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Different body fat distribution and temperature regulation</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Enhanced stress resilience through HPA axis modulation</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section bg-blue-50 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="font-display font-bold text-3xl md:text-4xl text-gray-800 mb-4">Frequently Asked Questions About Cold Plunging</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">Get answers to the most frequently asked questions from women starting their cold therapy journey.</p>
        </div>
        
        <div class="space-y-4">
          <!-- FAQ 1 -->
          <div class="faq-item bg-white border border-blue-200 rounded-xl overflow-hidden">
            <button class="faq-question w-full text-left px-6 py-5 flex justify-between items-center hover:bg-blue-50 transition-colors">
              <span class="font-display font-semibold text-lg text-gray-800 pr-4">Will cold plunging affect my menstrual cycle?</span>
              <svg class="faq-icon w-6 h-6 text-blue-600 flex-shrink-0 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-answer" style="max-height: 0; overflow: hidden;">
              <div class="px-6 py-4 text-gray-700 leading-relaxed">
                <p class="mb-3">Cold plunging typically does not negatively affect menstrual cycles when practiced moderately. Many women report improved cycle regularity and reduced PMS symptoms.</p>
                <p class="mb-3"><strong>Best practices:</strong></p>
                <ul class="list-disc pl-5 space-y-1 mb-3">
                  <li>Start gradually during the follicular phase (after menstruation)</li>
                  <li>Reduce intensity during menstruation if uncomfortable</li>
                  <li>Listen to your body and adjust based on how you feel</li>
                </ul>
                <p class="text-sm text-gray-600 italic">If you have irregular cycles or hormonal concerns, consult your healthcare provider before starting.</p>
              </div>
            </div>
          </div>

          <!-- FAQ 2 -->
          <div class="faq-item bg-white border border-blue-200 rounded-xl overflow-hidden">
            <button class="faq-question w-full text-left px-6 py-5 flex justify-between items-center hover:bg-blue-50 transition-colors">
              <span class="font-display font-semibold text-lg text-gray-800 pr-4">How cold should the water be?</span>
              <svg class="faq-icon w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-answer" style="max-height: 0; overflow: hidden;">
              <div class="px-6 py-4 text-gray-700 leading-relaxed">
                <p class="mb-3">The ideal temperature varies by experience level:</p>
                <ul class="list-disc pl-5 space-y-2 mb-3">
                  <li><strong>Beginners (60-65°F / 15-18°C):</strong> Cool enough to feel the cold stress response</li>
                  <li><strong>Intermediate (50-59°F / 10-15°C):</strong> Stronger benefits after your body adapts</li>
                  <li><strong>Advanced (39-50°F / 4-10°C):</strong> Maximum therapeutic benefits</li>
                </ul>
                <p class="text-sm bg-blue-100 p-3 rounded mt-3"><strong>Pro tip:</strong> If you can comfortably control your breathing in the water, you're at the right temperature.</p>
              </div>
            </div>
          </div>

          <!-- FAQ 3 -->
          <div class="faq-item bg-white border border-blue-200 rounded-xl overflow-hidden">
            <button class="faq-question w-full text-left px-6 py-5 flex justify-between items-center hover:bg-blue-50 transition-colors">
              <span class="font-display font-semibold text-lg text-gray-800 pr-4">Can I do this during pregnancy or perimenopause?</span>
              <svg class="faq-icon w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-answer" style="max-height: 0; overflow: hidden;">
              <div class="px-6 py-4 text-gray-700 leading-relaxed">
                <p class="mb-3"><strong>During Pregnancy:</strong> Cold plunging is generally not recommended during pregnancy. Always consult your obstetrician first.</p>
                <p class="mb-3"><strong>During Perimenopause:</strong> Many women find cold plunging particularly beneficial for managing hot flashes, mood stability, and sleep quality.</p>
                <p class="text-sm bg-yellow-50 border-l-4 border-yellow-400 p-3 rounded mt-3"><strong>Important:</strong> Consult your healthcare provider if you have cardiovascular issues, thyroid conditions, or take medications.</p>
              </div>
            </div>
          </div>

          <!-- FAQ 4 -->
          <div class="faq-item bg-white border border-blue-200 rounded-xl overflow-hidden">
            <button class="faq-question w-full text-left px-6 py-5 flex justify-between items-center hover:bg-blue-50 transition-colors">
              <span class="font-display font-semibold text-lg text-gray-800 pr-4">Do I need special equipment?</span>
              <svg class="faq-icon w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-answer" style="max-height: 0; overflow: hidden;">
              <div class="px-6 py-4 text-gray-700 leading-relaxed">
                <p class="mb-3"><strong>Essential (for beginners):</strong></p>
                <ul class="list-disc pl-5 space-y-1 mb-3">
                  <li>A bathtub and ice</li>
                  <li>Thermometer to monitor water temperature</li>
                  <li>Timer or phone</li>
                  <li>Warm towel and robe for after</li>
                </ul>
                <p class="mb-3"><strong>Recommended (for regular practice):</strong></p>
                <ul class="list-disc pl-5 space-y-1">
                  <li>Dedicated cold plunge tub with chiller</li>
                  <li>Non-slip mat</li>
                  <li>Comfortable swimsuit</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- FAQ 5 -->
          <div class="faq-item bg-white border border-blue-200 rounded-xl overflow-hidden">
            <button class="faq-question w-full text-left px-6 py-5 flex justify-between items-center hover:bg-blue-50 transition-colors">
              <span class="font-display font-semibold text-lg text-gray-800 pr-4">How often should I plunge?</span>
              <svg class="faq-icon w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-answer" style="max-height: 0; overflow: hidden;">
              <div class="px-6 py-4 text-gray-700 leading-relaxed">
                <p class="mb-3">Frequency depends on your experience level:</p>
                <ul class="list-disc pl-5 space-y-2 mb-3">
                  <li><strong>Beginners:</strong> 2-3 times per week for 1-2 minutes</li>
                  <li><strong>Intermediate:</strong> 3-5 times per week for 2-4 minutes</li>
                  <li><strong>Advanced:</strong> Daily plunges of 3-5 minutes</li>
                </ul>
                <p class="text-sm bg-green-50 p-3 rounded mt-3"><strong>Remember:</strong> Quality over quantity. A focused 2-minute plunge is more beneficial than a rushed 5-minute session.</p>
              </div>
            </div>
          </div>

          <!-- FAQ 6 -->
          <div class="faq-item bg-white border border-blue-200 rounded-xl overflow-hidden">
            <button class="faq-question w-full text-left px-6 py-5 flex justify-between items-center hover:bg-blue-50 transition-colors">
              <span class="font-display font-semibold text-lg text-gray-800 pr-4">What should I do immediately after plunging?</span>
              <svg class="faq-icon w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-answer" style="max-height: 0; overflow: hidden;">
              <div class="px-6 py-4 text-gray-700 leading-relaxed">
