---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Women's Cold Plunge Benefits | Wellness for Women";
const pageDescription = "Discover how cold plunging boosts women's hormonal balance, stress relief, and recovery with our expert guides and top tub recommendations.";

// Generate canonical URL and Open Graph image
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://womenscoldplunge.com');
const ogImage = '/images/og-homepage.webp';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  canonicalURL={canonicalURL.toString()}
  ogImage={ogImage}
  ogType="website"
>
  <Fragment slot="head">
    <!-- Schema.org JSON-LD for SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "Women's Cold Plunge Benefits",
        "description": "Discover how cold plunging boosts women's hormonal balance, stress relief, and recovery with our expert guides and top tub recommendations.",
        "url": "https://womenscoldplunge.com/"
      }
    </script>
    
    <!-- Page-specific styles -->
    <style>
      @import url('/fonts/fonts.css');
      
      .font-display {
        font-family: 'Montserrat', sans-serif;
      }
      
      .font-body {
        font-family: 'Open Sans', sans-serif;
      }
      
      .hero-video[poster] {
        object-position: center center;
        background-image: url('/Poster-Image.webp');
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
      }
      
      @media (max-width: 768px) {
        .hero-video[poster] {
          object-position: center center;
          background-image: url('/Poster-Image.webp');
          background-size: cover;
          background-position: center center;
          background-repeat: no-repeat;
        }
      }
      
      .hero-subheadline {
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
      }
    </style>
  </Fragment>

<body class="font-sans text-gray-800 bg-white">
  <!-- Sticky Navigation -->
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-md">
    <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold font-display text-blue-600 hover:text-blue-700 transition-colors">Women's Cold Plunge</a>
      <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none" aria-label="Toggle navigation">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
