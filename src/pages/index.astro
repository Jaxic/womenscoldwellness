        @keyframes bounce {
            0%, 20%, 60%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            80% { transform: translateY(-5px); }
        }

        /* Navigation slide animations */
        .nav-hidden {
            transform: translateY(-100%);
        }

        .nav-visible {
            transform: translateY(0);
