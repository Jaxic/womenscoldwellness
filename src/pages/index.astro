  <script>
    // Hamburger menu toggle
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Animation on page load
    document.addEventListener('DOMContentLoaded', function() {
      // Mobile video positioning fix
      const video = document.querySelector('.hero-video');
      if (video && window.innerWidth <= 768) {
        // Adjust video position based on screen orientation
        function adjustVideoPosition() {
          if (window.innerHeight > window.innerWidth) {
            // Portrait mode - focus on upper portion
            video.style.objectPosition = 'center 25%';
          } else {
            // Landscape mode - center normally
            video.style.objectPosition = 'center center';
          }
        }
        
        adjustVideoPosition();
        window.addEventListener('orientationchange', () => {
          setTimeout(adjustVideoPosition, 100);
        });
      }

      // Animate headline words with stagger
      const headlineWords = document.querySelectorAll('.headline-word');
      headlineWords.forEach((word, index) => {
        setTimeout(() => {
          word.style.animation = 'slideInUp 0.8s ease-out forwards';
        }, 800 + (index * 200));
      });

      // Animate subheadline
      setTimeout(() => {
        const subheadline = document.querySelector('.hero-subheadline');
        subheadline.style.animation = 'slideInUp 1s ease-out forwards';
      }, 2200);

      // Animate CTA buttons
      setTimeout(() => {
        const ctaButtons = document.getElementById('cta-buttons');
        ctaButtons.style.animation = 'bounceIn 0.8s ease-out forwards';
      }, 2800);

      // Intersection Observer for benefit cards
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -20px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const cards = document.querySelectorAll('.benefit-card');
            cards.forEach((card, cardIndex) => {
              setTimeout(() => {
                card.style.opacity = '1';
                card.style.animation = 'slideInUp 0.8s ease-out forwards';
              }, cardIndex * 200);
            });
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      // Observe each benefit card individually
      const benefitCards = document.querySelectorAll('.benefit-card');
      benefitCards.forEach(card => {
        observer.observe(card);
      });
    });
  </script>
