      headlineWords.forEach((word, index) => {
        setTimeout(() => {
          word.style.animation = 'slideInUp 0.8s ease-out forwards';
        }, 800 + (index * 200));
      });

      // Animate subheadline
      setTimeout(() => {
        const subheadline = document.querySelector('.hero-subheadline');
        subheadline.classList.remove('opacity-0');
        subheadline.style.animation = 'slideInUp 1s ease-out forwards';
      }, 2200);

      // Animate CTA buttons
      setTimeout(() => {
        const ctaButtons = document.getElementById('cta-buttons');
        ctaButtons.style.animation = 'bounceIn 0.8s ease-out forwards';
      }, 2800);

      // Intersection Observer for benefit cards
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -20px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const cards = document.querySelectorAll('.benefit-card');
            cards.forEach((card, cardIndex) => {
              setTimeout(() => {
                card.style.opacity = '1';
                card.style.animation = 'slideInUp 0.8s ease-out forwards';
              }, cardIndex * 200);
            });
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      // Observe each benefit card individually
      const benefitCards = document.querySelectorAll('.benefit-card');
      benefitCards.forEach(card => {
        observer.observe(card);
      });

      // Scroll-triggered animations for static sections
      const scrollObserverOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const scrollObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const element = entry.target;
            
            // Add the appropriate animation class based on existing classes
            if (element.classList.contains('fade-in-up')) {
              element.classList.add('fade-in-up');
            } else if (element.classList.contains('fade-in-left')) {
              element.classList.add('fade-in-left');
            } else if (element.classList.contains('fade-in-right')) {
              element.classList.add('fade-in-right');
            } else if (element.classList.contains('scale-in')) {
              element.classList.add('scale-in');
            } else if (element.classList.contains('stagger-fade-in')) {
              element.classList.add('stagger-fade-in');
            }
            
            // Unobserve after animation triggers
            scrollObserver.unobserve(element);
          }
        });
      }, scrollObserverOptions);

      // Observe all elements with animate-on-scroll class
      const animateElements = document.querySelectorAll('.animate-on-scroll');
      animateElements.forEach(element => {
        scrollObserver.observe(element);
      });

      // Research stats animation with better reliability
      const researchStatsObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const stats = entry.target.querySelectorAll('.research-stat');
            stats.forEach((stat, index) => {
              setTimeout(() => {
                stat.classList.add('visible');
              }, index * 150);
            });
            researchStatsObserver.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.2,
        rootMargin: '0px 0px -50px 0px'
      });

      // Target the specific stats container
      const scienceSection = document.querySelector('.science-section');
      if (scienceSection) {
        researchStatsObserver.observe(scienceSection);
