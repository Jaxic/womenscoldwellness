---
import '../styles/global.css';
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  tags: string[];
}

const { title, description, pubDate, heroImage, tags } = Astro.props;

// Generate canonical URL and Open Graph image
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://www.womenscoldwellness.com');
const ogImage = heroImage || '/images/og-default.webp';
---

<BaseLayout 
  title={title}
  description={description}
  canonicalURL={canonicalURL.toString()}
  ogImage={ogImage}
  ogType="article"
  publishedTime={pubDate.toISOString()}
  tags={tags}
>
  <Fragment slot="head">
    <!-- Blog-specific styles -->
    <style>
      @import url('/fonts/fonts.css');
      
      .font-display {
        font-family: 'Montserrat', sans-serif;
      }
      
      .font-body {
        font-family: 'Open Sans', sans-serif;
      }
      
      .blog-content {
        line-height: 1.7;
      }
      
      .blog-content h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 2rem 0 1rem 0;
        color: #1f2937;
      }
      
      .blog-content h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 1.5rem 0 0.75rem 0;
        color: #374151;
      }
      
      .blog-content p {
        margin: 1rem 0;
        color: #4b5563;
      }
      
      .blog-content ul, .blog-content ol {
        margin: 1rem 0;
        padding-left: 1.5rem;
      }
      
      .blog-content li {
        margin: 0.5rem 0;
        color: #4b5563;
      }
      
      .blog-content blockquote {
        border-left: 4px solid #3b82f6;
        padding-left: 1rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #6b7280;
      }
      
      .blog-content a {
        color: #3b82f6;
        text-decoration: underline;
      }
      
      .blog-content a:hover {
        color: #1d4ed8;
      }
      
      .blog-content strong {
        font-weight: 600;
        color: #374151;
      }

      .bg-gold-500 {
        background-color: #f59e0b;
      }
      
      .bg-gold-600 {
        background-color: #d97706;
      }
    </style>
  </Fragment>

  <!-- Sticky Navigation -->
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-md">
    <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold font-display text-blue-600 hover:text-blue-700 transition-colors">Cold Plunge Benefits for Women</a>
      <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none" aria-label="Toggle navigation">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      <ul id="nav-menu" class="hidden md:flex space-x-6 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors text-blue-600">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </nav>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
      <ul class="flex flex-col items-center py-4 space-y-4 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors text-blue-600">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li>/</li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li>/</li>
        <li class="text-gray-700">{title}</li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="text-center mb-12">
      <!-- Tags -->
      <div class="flex flex-wrap gap-2 mb-4 justify-center">
        {tags.map((tag) => (
          <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm rounded-full font-medium">
            {tag}
          </span>
        ))}
      </div>
      
      <!-- Title -->
      <h1 class="font-display font-bold text-3xl md:text-5xl text-gray-800 mb-6 leading-tight">
        {title}
      </h1>
      
      <!-- Meta info -->
      <div class="flex items-center gap-4 text-gray-600 mb-6 justify-center">
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        <span>•</span>
        <span>Cold Plunge Benefits for Women</span>
      </div>
      
      <!-- Hero Image placeholder if no image provided -->
      {heroImage && (
        <img 
          src={heroImage} 
          alt={title}
          class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg mb-6"
          loading="eager"
        />
      )}
    </div>

    <!-- Introduction -->
    <section class="mb-12">
      <p class="text-lg text-blue-600 leading-relaxed mb-6">
        {description}
      </p>
    </section>

    <!-- Article Content -->
    <article class="prose prose-lg max-w-none blog-content">
      <slot />
    </article>

    <!-- Related Articles Section -->
    <section class="mb-12">
      <h2 class="font-display font-bold text-2xl text-gray-800 mb-8 text-center">
        Related Articles
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <slot name="related-links" />
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center py-12 bg-blue-100 rounded-lg">
      <h2 class="font-display font-bold text-2xl md:text-3xl text-gray-800 mb-4">
        Explore More Cold Plunge Benefits
      </h2>
      <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
        Discover comprehensive guides on how cold plunging supports women's wellness and hormonal health.
      </p>
      <a 
        href="/benefits"
        class="inline-block bg-gold-500 text-gray-900 font-bold py-4 px-8 rounded-lg text-lg hover:bg-gold-600 transition-colors duration-300 transform hover:scale-105"
        aria-label="Explore Cold Plunge Benefits for Women"
      >
        Explore Benefits Guide
      </a>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-12">
    <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <a href="/disclosure" class="hover:text-blue-400 transition-colors">Affiliate Disclosure</a> |
        <a href="/privacy" class="hover:text-blue-400 transition-colors">Privacy Policy</a>
      </div>
      <div class="flex space-x-4 mb-4 md:mb-0">
        <a href="https://instagram.com" class="hover:text-blue-400 transition-colors" aria-label="Follow on Instagram">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.982-6.98.059-1.281.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.948-.2-4.354-2.618-6.782-6.98-6.982-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.40z"></path>
          </svg>
        </a>
        <a href="https://pinterest.com" class="hover:text-blue-400 transition-colors" aria-label="Follow on Pinterest">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12.14.5C5.86.5 1.7 5.29 1.7 11.57c0 4.45 2.72 8.24 6.58 9.76-.09-.81-.17-2.06.03-2.94.18-.79 1.18-5.03 1.18-5.03s-.3-.6-.3-1.49c0-1.39.81-2.43 1.81-2.43.85 0 1.26.64 1.26 1.41 0 .86-.55 2.14-.83 3.33-.24.99.49 1.8 1.46 1.8 1.75 0 3.1-1.84 3.1-4.49 0-2.35-1.69-3.99-4.1-3.99-2.79 0-4.43 2.09-4.43 4.25 0 .84.32 1.74.73 2.23.08.1.09.18.07.28-.07.34-.23 1.06-.27 1.2-.04.15-.14.18-.32.11-1.2-.44-1.95-1.83-1.95-2.95 0-2.4 1.74-4.6 5.02-4.6 2.64 0 4.69 1.88 4.69 4.39 0 2.62-1.65 4.73-3.94 4.73-.77 0-1.49-.4-1.74-.87 0 0-.38 1.46-.47 1.82-.17.67-.5 1.51-.75 2.02.56.17 1.14.26 1.75.26 6.28 0 11.36-5.29 11.36-11.57S18.42.5 12.14.5z"></path>
          </svg>
        </a>
      </div>
      <p class="text-sm">© 2025 Cold Plunge Benefits for Women</p>
    </div>
  </footer>

  <!-- Mobile menu toggle script -->
  <script>
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</BaseLayout>