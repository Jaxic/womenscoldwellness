---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  tags: string[];
}

const { title, description, pubDate, heroImage, tags } = Astro.props;

// Generate canonical URL and Open Graph image
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://womenscoldplunge.com');
const ogImage = heroImage || '/images/og-default.webp';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(ogImage, canonicalURL)} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:type" content="article" />
  <meta property="og:site_name" content="Women's Cold Plunge Benefits" />
  <meta property="og:locale" content="en_US" />
  <meta property="article:published_time" content={pubDate.toISOString()} />
  <meta property="article:author" content="Women's Cold Plunge Benefits" />
  <meta property="article:section" content="Health & Wellness" />
  {tags.map((tag) => <meta property="article:tag" content={tag} />)}
  
  <!-- Twitter Card Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(ogImage, canonicalURL)} />
  
  <!-- Additional SEO Meta Tags -->
  <meta name="author" content="Women's Cold Plunge Benefits" />
  
  <!-- Google Analytics 4 -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-LYL708DKYY"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-LYL708DKYY');
  </script>
  <!-- Schema.org JSON-LD for SEO -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": title,
      "description": description,
      "datePublished": pubDate.toISOString(),
      "author": {
        "@type": "Organization",
        "name": "Women's Cold Plunge Benefits"
      }
    }
  </script>
</head>
<body class="font-sans text-gray-800 bg-white">
  <!-- Sticky Navigation -->
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-md">
    <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold font-display text-blue-600 hover:text-blue-700 transition-colors">Women's Cold Plunge</a>
      <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none" aria-label="Toggle navigation">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
        </svg>
      </button>
      <ul id="nav-menu" class="hidden md:flex space-x-6 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors text-blue-600">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </nav>
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
      <ul class="flex flex-col items-center py-4 space-y-4 text-gray-800">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li><a href="/benefits" class="hover:text-blue-600 transition-colors">Benefits</a></li>
        <li><a href="/tubs" class="hover:text-blue-600 transition-colors">Best Tubs</a></li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors text-blue-600">Blog</a></li>
        <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
      </ul>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
        <li>/</li>
        <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
        <li>/</li>
        <li class="text-gray-700">{title}</li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="text-center mb-12">
      <!-- Tags -->
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4 justify-center">
          {tags.map((tag) => (
            <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm rounded-full font-medium">
              {tag}
            </span>
          ))}
        </div>
      )}

      <!-- Title -->
      <h1 class="font-display font-bold text-3xl md:text-5xl text-gray-800 mb-6 leading-tight">
        {title}
      </h1>

      <!-- Meta info -->
      <div class="flex items-center gap-4 text-gray-600 mb-6 justify-center">
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span>•</span>
        <span>Women's Cold Plunge Benefits</span>
      </div>

      <!-- Hero Image placeholder if no image provided -->
      {heroImage ? (
        <img 
          src={heroImage} 
          alt={title}
          class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg mb-6"
          loading="eager"
        />
      ) : (
        <div class="w-full h-64 md:h-96 bg-gray-200 flex items-center justify-center rounded-lg shadow-lg mb-6">
          <span class="text-gray-500 text-sm">Image Coming Soon</span>
        </div>
      )}
    </div>

    <!-- Introduction -->
    <section class="mb-12">
      <p class="text-lg text-blue-600 leading-relaxed mb-6">
        {description}
      </p>
    </section>

    <!-- Article Content -->
    <article class="prose prose-lg max-w-none blog-content">
      <slot />
    </article>

    <!-- Related Articles Section -->
    <section class="mb-12 mt-16">
